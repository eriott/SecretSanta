extends layout

block content
    .container
        .row
            .col
            .col-6
                form(name="register-participant", method="post")
                    div.form-group
                        label(for="fullName") Полное ФИО
                        input.form-control#fullName(type="text", name="fullName")
                    div.form-group
                        label(for="address") Адрес
                        textarea.form-control#address(name="address", cols="40", rows="5")
                    div.form-group
                        label(for="wanted") Что бы Вы хотели получить в подарок?
                        textarea.form-control#wanted(name="wanted", cols="40", rows="5")
                    div.form-group
                        label(for="unwanted") Что Вам не стоит дарить?
                        textarea.form-control#unwanted(name="unwanted", cols="40", rows="5")
                    div.form-group
                        input.form-control(type="submit", value="Сохранить")
            .col